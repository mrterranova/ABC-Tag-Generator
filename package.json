{
  "name": "abc-generator-capstone",
  "version": "1.0.0",
  "type": "module",
  "main": "db.js",
  "scripts": {
    "build": "npm install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "full": "concurrently \"npm run server\" \"npm run client\" \"npm run ml-model\"",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "ml-model": "cd ABC-Tag-Generator-ML-Model && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "client": "cd abc-tag-generator-ui && npm run start",
    "seed": "node seed.js"
  },
  "dependencies": {
    "body-parser": "^2.2.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "node-fetch": "^3.3.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.2"
  }
}
